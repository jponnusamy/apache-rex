Listen @AREX_RUN_PORT1@
<VirtualHost *:@AREX_RUN_PORT1@>
  DocumentRoot "@AREX_RUN_DIR@/htdocs-backend"
  <Directory "@AREX_RUN_DIR@/htdocs-backend">
    # in case mod_mime would not be activated,
    # following is needed:
    # Header set Content-type: "text/html"

    @AREX_ALLOW_FROM_LOCALHOST@
  </Directory>
</VirtualHost>

Listen @AREX_RUN_PORT2@
<VirtualHost *:@AREX_RUN_PORT2@>
  ProxyPass /pangrams/ http://localhost:@AREX_RUN_PORT1@/
  ProxyHTMLEnable on
  xml2EncDefault ISO-8859-2
  # at least one ProxyHTMLLinks needs to be defined to
  # activate html_proxy rewriting, it seems
  ProxyHTMLLinks  a  href
</VirtualHost>

Listen @AREX_RUN_PORT3@
<VirtualHost *:@AREX_RUN_PORT3@>
  ProxyPass /pangrams/ http://localhost:@AREX_RUN_PORT1@/
  ProxyHTMLEnable on
  ProxyHTMLMeta on
  # at least one ProxyHTMLLinks needs to be defined to
  # activate html_proxy rewriting, it seems
  ProxyHTMLLinks  a  href
</VirtualHost>

Listen @AREX_RUN_PORT4@
<VirtualHost *:@AREX_RUN_PORT4@>
  DocumentRoot "@AREX_RUN_DIR@/htdocs-backend"
  <Directory "@AREX_RUN_DIR@/htdocs-backend">
    Header set Content-type: "text/html;charset=iso-8859-2"
    @AREX_ALLOW_FROM_LOCALHOST@
  </Directory>
</VirtualHost>

Listen @AREX_RUN_PORT5@
<VirtualHost *:@AREX_RUN_PORT5@>
  ProxyPass /pangrams/ http://localhost:@AREX_RUN_PORT4@/
  ProxyHTMLEnable on
  ProxyHTMLLinks  a  href
</VirtualHost>

