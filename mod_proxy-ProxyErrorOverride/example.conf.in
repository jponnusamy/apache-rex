Listen @AREX_RUN_PORT1@
<VirtualHost *:@AREX_RUN_PORT1@>
    ErrorLog "@AREX_RUN_DIR@/error_log-vh1"
    ErrorDocument 404 "Virtual Host Handling of 404\n"
</VirtualHost>

Listen @AREX_RUN_PORT2@
<VirtualHost *:@AREX_RUN_PORT2@>
    ErrorLog "@AREX_RUN_DIR@/error_log-vh2"
    ProxyPass / "http://localhost:@AREX_RUN_PORT1@/"
</VirtualHost>

Listen @AREX_RUN_PORT3@
<VirtualHost *:@AREX_RUN_PORT3@>
    ErrorLog "@AREX_RUN_DIR@/error_log-vh3"
    ProxyPass / "http://localhost:@AREX_RUN_PORT1@/"
    ProxyErrorOverride on
    ErrorDocument 404 "Proxy handling of 404\n"
</VirtualHost>
